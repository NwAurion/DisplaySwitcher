<UserControl x:Class="DisplaySwitcher.Switcher"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DisplaySwitcher"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
    <Grid>
        <Button Name="btnSwitchToInternal" Margin="25,25,25,250" Height="200" Width="750" TextElement.FontSize="100" Click="btnSwitchToInternal_Click">Internal Display</Button>
        <Button Name="btnSwitchToExternal" Margin="25,250,25,25" Height="200" Width="750" TextElement.FontSize="100" Click="btnSwitchToExternal_Click">External Display</Button>
    </Grid>
</UserControl>
